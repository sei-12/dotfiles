{
    //
    // VIM
    //
    "vim.useSystemClipboard": true,
    "vim.visualstar": true, //カーソル上にあるワードを"*"で検索
    "vim.useCtrlKeys": true,
    "vim.sneak": true,
    "vim.easymotion": true,

    "editor.smoothScrolling": true,
    "explorer.compactFolders": false,
    "extensions.ignoreRecommendations": true,
    "editor.fontFamily": "Hack Nerd Font Bold",
    "workbench.startupEditor": "none",
    "git.openRepositoryInParentFolders": "never",
    "editor.fontWeight": "600",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": true,
    "security.workspace.trust.untrustedFiles": "open",
    "screencastMode.keyboardOptions": {
        "showSingleEditorCursorMoves": false
    },
    "keyboard.dispatch": "keyCode",
    "editor.copyWithSyntaxHighlighting": false,
    "editor.lineNumbers": "relative",
    "editor.mouseWheelScrollSensitivity": -3.5,
    "liveServer.settings.donotShowInfoMsg": true,
    "window.menuBarVisibility": "toggle",
    "editor.renderControlCharacters": true,
    "errorLens.enabledDiagnosticLevels": [
        "error",
        "warning"
    ],
    "vim.surround": true,
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "files.autoSave": "afterDelay",
    "liveServer.settings.donotVerifyTags": true,
    "workbench.colorTheme": "Tokyo Night Storm Frameless",
    "multiCommand.commands": [
        {
            "command": "my.fold.level1",
            "sequence": [
                "cursorBottom",
                "editor.foldLevel1"
            ]
        }
    ],
    "window.zoomLevel": 0,
    "workbench.sideBar.location": "right",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "prettier.tabWidth": 4,
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer"
    }
}