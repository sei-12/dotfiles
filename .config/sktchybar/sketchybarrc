sketchybar --add item full_screen left\
           --set full_screen icon=\
            click_script="yabai -m window --grid 1:1:0:0:1:1"\
            icon.y_offset=-1\
           icon.color=0xff7B6899 icon.font="Hack Nerd Font:Bold:23.0"\
